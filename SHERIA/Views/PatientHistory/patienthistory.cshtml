@section PageStyles{
    <link href="~/assets/static/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/assets/static/css/pretty-checkbox.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/DataTables/media/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/DataTables/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-sweetalert2/sweetalert2.min.css" rel="stylesheet" />


    <link href="~/assets/static/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/assets/static/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
}
<!-- begin page-header -->
<h1 class="page-header"><i class="fas fa-database"></i> Client Maintenance <small> Patient History </small></h1>
<!-- end page-header -->
<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="@Url.Action("patienthistory", "PatientHistory")" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fas fa-undo-alt"></i></a>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Patient History</h4>
    </div>
    <div class="panel-body">
        <p></p>
        <div class="form-horizontal">
            <div class="row">
                <a id="editabledatatable_new" class="btn btn-sm btn-success" data-toggle="modal" data-target="#capture-record">
                    <i class="fa fa-plus"></i> Add New
                </a>
                <br />
                <br />
            </div>
            <div class="row">
                <table id="editabledatatable" class="table table-striped table-hover table-bordered table-condensed">
                    <thead>
                        <tr role="row">
                            <th style="width:auto">Client</th>
                            <th style="width:auto">Weight</th>
                            <th style="width:auto">Height</th>
                            <th style="width:auto">BMI</th>
                            <th style="width:auto">Blood Pressure</th>
                            <th style="width:auto">Pulse Rate</th>
                            <th style="width:auto">SPO2</th>
                            <th style="width:auto"></th>
                            <th style="width:auto"></th>
                            <th style="width:auto"></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="modal fade" id="capture-record" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title">Capture Patient Vital Signs</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <input id="recordid" type="hidden" name="recordid" />
                                            <label class="form-control-label" for="client_id">Client</label>
                                            <select id="client_id" type="text" name="client_id" class="form-control"></select>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="weight">Weight</label>
                                            <input id="weight" type="text" name="weight" class="form-control" placeholder="Enter Weight" />
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="height">Height</label>
                                            <input id="height" type="text" name="height" class="form-control" placeholder="Enter Height" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="body_mass_index">BMI</label>
                                            <input id="body_mass_index" type="text" name="body_mass_index" class="form-control" placeholder="Enter BMI" />
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="blood_pressure">Blood Pressure</label>
                                            <input id="blood_pressure" type="text" name="blood_pressure" class="form-control" placeholder="Enter Blood Pressure" />
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="pulse_rate">Pulse Rate</label>
                                            <input id="pulse_rate" type="text" name="pulse_rate" class="form-control" placeholder="Enter Pulse Rate" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="standard_operating_procedure">SPO2</label>
                                            <input id="standard_operating_procedure" type="text" name="standard_operating_procedure" class="form-control" placeholder="Enter SPO2" />
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="prescription">Visit Date</label>
                                            <input id="visit_date" type="text" name="visit_date" class="form-control" placeholder="Select Visit Date" data-date-format="yyyy-mm-dd" style="width: 100%" />
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <label class="form-control-label" for="next_visit_date">Next Visit Date</label>
                                            <input id="next_visit_date" type="text" name="next_visit_date" class="form-control" placeholder="Select Next Visit Date" data-date-format="yyyy-mm-dd" style="width: 100%" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="form-control-label" for="prescription">Prescription</label>
                                            <textarea id="prescription" rows="3" name="prescription" class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="form-control-label" for="remarks">Remarks</label>
                                            <textarea id="remarks" rows="3" name="remarks" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-white btn-sm" id="cancel" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Cancel</a>
                                    <a href="#" class="btn btn-success btn-sm" id="save"><i class="fa fa-save"></i>&nbsp;Save</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="view-record" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">View Patient Vital Signs</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="client_id">Client</label>
                                        <input id="client_id" type="text" name="client_id" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="weight">Weight</label>
                                        <input id="weight" type="text" name="weight" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="height">Height</label>
                                        <input id="height" type="text" name="height" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="body_mass_index">BMI</label>
                                        <input id="body_mass_index" type="text" name="body_mass_index" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="blood_pressure">Blood Pressure</label>
                                        <input id="blood_pressure" type="text" name="blood_pressure" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="pulse_rate">Pulse Rate</label>
                                        <input id="pulse_rate" type="text" name="pulse_rate" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="standard_operating_procedure">SPO2</label>
                                        <input id="standard_operating_procedure" type="text" name="standard_operating_procedure" class="form-control" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="prescription">Visit Date</label>
                                        <input id="visit_date" type="text" name="visit_date" class="form-control" placeholder="Select Visit Date" data-date-format="yyyy-mm-dd" style="width: 100%" readonly />
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <label class="form-control-label" for="next_visit_date">Next Visit Date</label>
                                        <input id="next_visit_date" type="text" name="next_visit_date" class="form-control" placeholder="Select Next Visit Date" data-date-format="yyyy-mm-dd" style="width: 100%" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="form-control-label" for="prescription">Prescription</label>
                                        <textarea id="prescription" rows="3" name="prescription" class="form-control" readonly></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label class="form-control-label" for="remarks">Remarks</label>
                                        <textarea id="remarks" rows="3" name="remarks" class="form-control" readonly></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a href="#" class="btn btn-white btn-sm" id="cancel" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
        <hr>
    </div>
    <!-- end panel-body -->
</div>
<!-- end panel -->
@section PageScripts{
    <script src="~/assets/static/plugins/select2/dist/js/select2.min.js"></script>
    <script src="~/assets/static/plugins/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/static/plugins/DataTables/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/assets/static/plugins/DataTables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/static/js/table-manage-responsive.demo.min.js"></script>
    <script src="~/assets/static/plugins/bootstrap-sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/assets/static/js/apps.min.js"></script>
    <script src="~/assets/static/js/jquery.blockUI.js"></script>
    <script src="~/assets/static/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/static/js/patient-history/patient-history.js"></script>
    }